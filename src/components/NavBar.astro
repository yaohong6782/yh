---
import '@fontsource/patrick-hand'

const sectionItems = [
  {
    anchor:'#about',
    name:"about"
  }, 
  {
    anchor:'#experiences',
    name: 'experiences'
  },
  {
    anchor:'#content',
    name:'content'
  },
  {
    anchor:"#projects",
    name: 'projects'
  }
]
---

<nav class="flex gap-3 justify-between">
  <ul>
    <li class="text-3xl text-nowrap items-left items-center hover:underline underline-offset-4 cursor-pointer font-patrick hover:scale-110">yao hong</li>
  </ul>
  <ul class="text-2xl flex gap-5 right-item items-center font-patrick">
    {sectionItems.map((section) => (
      <li class="hover:underline underline-offset-4 cursor-pointer hover:scale-110">
        <a href={section.anchor}> 
          {section.name}
        </a>
      </li>
    ))}
  </ul>
</nav>

