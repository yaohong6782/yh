---

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="smooth-scroll">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Yao Hong Website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="dark:bg-slate-900 dark:text-white transition-colors">
		<slot />
	</body>
</html>
<style>
html {
	scroll-behavior: smooth;
 }
</style>



